<h1 class="text-center text-2xl text-orange-500 py-5"><%= title %> </h1>

<form action="/order/add-order" method="POST" class="relative w-[25%] m-auto">
    <div class="reciept border p-5 shadow-md">
        <div class="text-center">
            <h1 class="text-2xl">Kev's Pizza</h1>
            <small>6 Somewhere Drive <br> Kingston 10 <br> 876-555-6677</small>
        </div>
        <h2 class="bg-black text-white p-5 text-center mt-1">ORDER# <%= reciept.id %>  </h2>

        <div>
            <div class="p-5 flex justify-between">
                <p>
                    <%= reciept.type %>
                </p>
                
                <div>
                   Qty <%= reciept.order_qty %> 
                </div>
            </div>
            
            <div class="px-5 flex justify-between">
                <p>Total</p>
                <div>
                    $<%= reciept.price %> 
                </div>
            </div>

            <div class="px-5 flex justify-between pt-1">
                <b>Grand Total</b>
                <div>
                    $<%= reciept.grand_total %> 
                </div>
            </div>
        </div>
        <br>
        <hr>
        <div class="text-center">
            <div class="flex justify-center">
                <p>Order Key Code:</p>
                <%= reciept.key_code %> 
            </div>
            <small>use your order number along with key code to check status of your order</small>
        </div>
    </div>
</form>

<div class=" mt-5 text-center pt-2 flex justify-center">
    <a href="/menu" class="bg-orange-500 text-white p-4 block mx-1">
        Back to Menu
    </a>

    <a href="/status-check" class="bg-black text-white p-4 block mx-1">
        Check Order Status
    </a>
</div>